  <div class="mt-2">Include the following in the <b>membership directory</b></div>
  <div class="ms-1">
    <div class="input-wrapper">
      <label class="label">
        {{form.include_name_in_membership_directory}}
        Name
      </label>
      {{form.include_name_in_membership_directory.errors}}
    </div>
    <div class="input-wrapper">
      <label class="label">
        {{form.include_email_in_membership_directory}}
