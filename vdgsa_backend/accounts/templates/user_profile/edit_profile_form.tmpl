<fieldset class="mt-3">
  <legend>Affiliations and Commercial</legend>
  <div class="input-wrapper mb-3">
    <label class="label">
      {{form.is_young_player}}
      Do you identify as a young player?
    </label>
    {{form.is_young_player.errors}}
  </div>

  <div class="input-wrapper">
    <label class="label">
      {{form.is_teacher}}
      Are you a teacher?
    </label>
    {{form.is_teacher.errors}}
  </div>

  <div class="input-wrapper">
    <label class="label">
      Brief Description
      (<span id="teacher-description-num-chars-used">
      </span>/{{form.fields.teacher_description.max_length}} chars) <br>
      {{form.teacher_description}}
    </label>
    {{form.teacher_description.errors}}
  </div>

  <div class="input-wrapper">
    <label class="label">
      {{form.is_remote_teacher}}
      Do you teach remotely?
    </label>
    {{form.is_remote_teacher.errors}}
  </div>

  <div class="input-wrapper mt-3">
    <label class="label">
      What educational institution are you affiliated with? <br>
      {{form.educational_institution_affiliation}}
    </label>
    {{form.educational_institution_affiliation.errors}}
  </div>

  <div class="mt-3">Are you a commercial member? (Select all that apply)</div>
  <div class="ms-1">
    <div class="input-wrapper">
      <label class="label">
        {{form.is_builder}}
        Builder
      </label>
      {{form.is_builder.errors}}
    </div>
    <div class="input-wrapper">
      <label class="label">
        {{form.is_publisher}}
        Publisher
      </label>
      {{form.is_publisher.errors}}
    </div>
    <div class="input-wrapper">
      <label class="label">
        Other Commercial Type (Please Specify) <br>
        {{form.other_commercial}}
      </label>
      {{form.other_commercial.errors}}
    </div>
  </div>

  <div class="d-flex align-items-center mt-2">
    <button type="submit" class="btn btn-success">Save</button>
    <div class="last-saved ms-2"></div>
  </div>
</fieldset>

<fieldset class="mt-3">
  <legend>Privacy</legend>

  <div class="input-wrapper">
